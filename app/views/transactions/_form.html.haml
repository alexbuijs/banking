= simple_form_for @transaction, :html => { :class => 'form-horizontal' } do |f|
  = f.input :sender_id
  = f.input :receiver_id
  = f.input :amount
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), transactions_path, :class => 'btn'
